<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/itemSize"
        android:layout_height="@dimen/itemSize"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="@dimen/margin"
        />
    <TextView
        android:id="@+id/nameItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/bigText"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/priceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="@dimen/generalText"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/saleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Sale"
        android:textColor="@color/black"
        android:textSize="@dimen/smallText"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/statusItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="@dimen/smallText"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin">
    <Button
        android:id="@+id/btnBuy"
        android:layout_width="@dimen/smallButton"
        android:layout_height="wrap_content"
        android:background="@drawable/clicked_button"
        android:text="Buy"
        android:textSize="@dimen/bigText"
        android:textColor="@color/textOnButton"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/sizeIcon"/>
    <Button
        android:id="@+id/btnCancel_Buy"
        android:layout_width="@dimen/smallButton"
        android:layout_height="wrap_content"
        android:background="@drawable/clicked_button"
        android:text="Cancel"
        android:textSize="@dimen/bigText"
        android:textColor="@color/textOnButton"
        android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>